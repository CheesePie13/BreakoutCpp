	"version": "0.2.0",
	"configurations": [
		{
			"name": "(gdb) Launch Windows Debug",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/bin/win-debug/BreakoutCppWin_debug.exe",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}/bin/win-debug/",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"miDebuggerPath": "C:/Program Files/mingw-w64/x86_64-8.1.0-posix-seh-rt_v6-rev0/mingw64/bin/gdb.exe",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			]
		},
		{
			"name": "(lldb) Launch Mac Debug",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/bin/mac-debug/BreakoutCppMac_debug.app",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "lldb"
		},
	]
}